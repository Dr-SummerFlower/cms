                padding: 25px;
                margin: 20px 0;
                border-left: 4px solid #667eea;
            }
            .concert-name {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                margin-bottom: 15px;
            }
            .concert-details {
                color: #666;
                font-size: 16px;
            }
            .concert-details .label {
                font-weight: bold;
                color: #333;
                display: inline-block;
                width: 80px;
            }
            .concert-details div {
                margin-bottom: 8px;
            }
            .reminder-text {
                background: #fff3cd;
                border: 1px solid #ffeaa7;
                border-radius: 6px;
                padding: 20px;
                margin: 25px 0;
                text-align: center;
                color: #856404;
            }
            .reminder-text .time {
                font-size: 20px;
                font-weight: bold;
                color: #d63031;
            }
            .footer {
                background: #f8f9fa;
                padding: 25px 30px;
                text-align: center;
                color: #666;
                font-size: 14px;
                border-top: 1px solid #e9ecef;
                line-height: 1.5;
            }
            .btn {
                display: inline-block;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 12px 30px;
                text-decoration: none;
                border-radius: 25px;
                margin: 20px 0;
                font-weight: bold;
                transition: transform 0.2s;
            }
            .btn:hover {
                transform: translateY(-2px);
            }
