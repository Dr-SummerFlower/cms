# =============================================
# 管理员账户配置
# =============================================

# 管理员用户名 - 设置系统默认管理员账号
ADMIN_USER=admin

# 管理员邮箱 - 用于接收系统通知和重置密码
ADMIN_EMAIL=admin@example.com

# 管理员密码 - 必须包含大小写字母、数字和特殊字符，长度至少8位
ADMIN_PWD=YourSecurePassword123!


# =============================================
# 数据库配置
# =============================================

# MongoDB 连接字符串 - 格式: mongodb://用户名:密码@主机:端口/数据库名
DB_URI=mongodb://localhost:27017/cms_dev

# Redis 连接配置 - 用于缓存和会话存储
REDIS_URI=redis://localhost:6379

# Redis 密码 - 如果Redis设置了密码请填写，否则留空
REDIS_PWD=your_redis_password


# =============================================
# 服务器配置
# =============================================

# 应用服务端口号 - 确保该端口未被其他服务占用
PORT=25551


# =============================================
# JWT 认证配置
# =============================================

# JWT 访问令牌密钥 - 建议使用随机生成的复杂字符串
JWT_SECRET=your_jwt_secret_key_here

# JWT 刷新令牌密钥 - 应与访问令牌密钥不同
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key

# JWT 访问令牌过期时间 - 格式: 数字+单位 (如: 1h, 7d, 30d)
JWT_EXPIRES_IN=1d

# JWT 刷新令牌过期时间 - 通常比访问令牌时间长
JWT_REFRESH_EXPIRES_IN=7d


# =============================================
# 安全与加密配置
# =============================================

# 头像URL加密密钥 - 用于加密用户头像访问URL
AVATAR_URL_SECRET=your_avatar_url_secret

# 数据加密密钥 - 必须是32位字符，用于加密敏感数据
ENCRYPTION_KEY=your-32-character-super-secret-key


# =============================================
# 登录限制配置
# =============================================

# 短期窗口时间（秒）- 30秒内错误登录次数达到限制将触发短期锁定
LOGIN_LIMIT_SHORT_WINDOW_SECONDS=30

# 短期最大尝试次数 - 在短期窗口内允许的最大错误登录次数
LOGIN_LIMIT_SHORT_MAX_ATTEMPTS=5

# 短期锁定时间（秒）- 触发短期限制后的锁定时长
LOGIN_LIMIT_SHORT_LOCK_SECONDS=60

# 长期窗口时间（秒）- 5分钟内错误登录次数达到限制将触发长期锁定
LOGIN_LIMIT_LONG_WINDOW_SECONDS=300

# 长期最大尝试次数 - 在长期窗口内允许的最大错误登录次数
LOGIN_LIMIT_LONG_MAX_ATTEMPTS=10

# 长期锁定时间（秒）- 触发长期限制后的锁定时长
LOGIN_LIMIT_LONG_LOCK_SECONDS=3600


# =============================================
# 邮件服务配置
# =============================================

# 通知邮件账号 - 系统发送通知邮件的邮箱地址
NOTIFY_EMAIL_USER=your_email@example.com

# 通知邮件授权码 - 邮箱服务商提供的SMTP授权码，不是邮箱登录密码
NOTIFY_EMAIL_PWD=your_email_smtp_password


# =============================================
# 文件存储配置 (MinIO)
# =============================================

# MinIO 服务端点 - MinIO服务器地址
MINIO_END_POINT=localhost

# MinIO 服务端口 - MinIO服务监听的端口
MINIO_PORT=9000

# 是否使用 SSL 连接 - 生产环境建议设置为true
MINIO_USE_SSL=false

# MinIO 访问密钥 - 从MinIO控制台获取
MINIO_ACCESS_KEY=your_minio_access_key

# MinIO 秘密密钥 - 从MinIO控制台获取，妥善保管
MINIO_SECRET_KEY=your_minio_secret_key

# MinIO 公共访问地址 - 用户访问文件时的公开地址
MINIO_PUBLIC_HOST=localhost

# MinIO 存储桶名称 - 用于存储静态资源的桶名称
MINIO_BUCKET=assets
